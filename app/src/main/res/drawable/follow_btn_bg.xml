<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 白色背景 -->
    <solid android:color="#FFFFFF"/>

    <!-- 圆角 -->
    <corners android:radius="18dp"/>

    <!-- 内边距，让文字居中且不被裁剪 -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="6dp"
        android:bottom="6dp" />

    <!-- 边框 -->
    <stroke
        android:width="2dp"
        android:color="#A020F0"/>
</shape>
